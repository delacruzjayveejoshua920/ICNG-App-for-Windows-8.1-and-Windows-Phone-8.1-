                        <Rectangle Grid.Column="4" Grid.Row="3" Grid.ColumnSpan="3" Grid.RowSpan="1">
                            <Rectangle.Fill>
                                <ImageBrush Stretch="Fill" ImageSource="Assets/TWITTERRR_ICON.png"/>
                            </Rectangle.Fill>
                        </Rectangle>

                        <tiles:WideTileImage
                            Grid.ColumnSpan="3"
                            Grid.Row="3"

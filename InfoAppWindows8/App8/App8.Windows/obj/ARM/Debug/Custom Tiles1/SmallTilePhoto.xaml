<UserControl x:Class="CustomLiveTiles.SmallTilePhoto"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:local="using:CustomLiveTiles"
    d:DesignHeight="67" d:DesignWidth="67">

    <UserControl.Resources>

        <Storyboard x:ConnectionId='1' x:Key="liveTileAnimTop1_Part1" x:Name="liveTileAnimTop1_Part1"                                             >
            <DoubleAnimation
                From="0" To="90"
                Duration="0:0:0.25"
                Storyboard.TargetName="planePanel"
                Storyboard.TargetProperty="(PlaneProjection.RotationX)"
 />
        </Storyboard>

        <Storyboard x:ConnectionId='2' x:Key="liveTileAnimTop1_Part2" x:Name="liveTileAnimTop1_Part2"                                               Duration="0:0:3">
            <DoubleAnimation
                From="90" To="0"
                Duration="0:0:0.25"
                Storyboard.TargetName="planePanel2"
                Storyboard.TargetProperty="(PlaneProjection.RotationX)"
 />
        </Storyboard>

        <Storyboard x:ConnectionId='3' x:Key="liveTileAnimTop2_Part1" x:Name="liveTileAnimTop2_Part1"                                             >
            <DoubleAnimation
                From="0" To="90"
                Duration="0:0:0.25"
                Storyboard.TargetName="planePanel2"
                Storyboard.TargetProperty="(PlaneProjection.RotationX)"
 />
        </Storyboard>

        <Storyboard x:ConnectionId='4' x:Key="liveTileAnimTop2_Part2" x:Name="liveTileAnimTop2_Part2"                                              Duration="0:0:3">
            <DoubleAnimation
                From="90" To="0"
                Duration="0:0:0.25"
                Storyboard.TargetName="planePanel"
                Storyboard.TargetProperty="(PlaneProjection.RotationX)"
 />
        </Storyboard>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" Background="#1133CC" Canvas.ZIndex="1" Width="67" Height="67">
        <Grid Name="Front" Width="67" Height="67" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid.Projection>
                <PlaneProjection x:Name="planePanel" RotationX="0" />
            </Grid.Projection>
            <Image Name="imgPhoto" HorizontalAlignment="Left" VerticalAlignment="Top" Width="67" Height="67" Stretch="UniformToFill" />
        </Grid>
        <Grid Name="Back" Margin="0, 0, 0, 0" Width="67" Height="67" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid.Projection>
                <PlaneProjection x:Name="planePanel2" RotationX="90" />
            </Grid.Projection>
        </Grid>
    </Grid>
</UserControl>

